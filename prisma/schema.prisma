// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Category {
  slug     String    @id
  name     String
  products Product[]
}

model Product {
  id            String      @id
  name          String
  slug          String
  description   String?     @db.Text
  price         Decimal
  images        String[]
  boxImages     String[]   // Nouvelle colonne pour les images sp√©cifiques aux box
  affiliateLink String?    
  categoryId    String
  Category      Category    @relation(fields: [categoryId], references: [slug])
  createdAt     DateTime    @default(now())
  updatedAt     DateTime?    

  @@index([categoryId, name, slug])
}

model Feedback {
  id        Int      @id @default(autoincrement())
  rating    Int
  createdAt DateTime @default(now())
}
